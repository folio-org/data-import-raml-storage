{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Journal record data model",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "description": "UUID",
      "$ref": "../common/uuid.json"
    },
    "jobExecutionId": {
      "description": "UUID",
      "$ref": "../common/uuid.json"
    },
    "sourceId": {
      "description": "SRS record identifier, UUID",
      "$ref": "../common/uuid.json"
    },
    "sourceRecordOrder": {
      "description": "Order of the record in imported file",
      "type": "integer",
      "minimum": 0
    },
    "entityType": {
      "description": "Type of entity",
      "type": "string",
      "additionalProperties": false,
      "enum": [
        "INSTANCE",
        "HOLDINGS",
        "ITEM",
        "ORDER",
        "INVOICE",
        "MARC_BIBLIOGRAPHIC",
        "MARC_HOLDINGS",
        "MARC_AUTHORITY"
      ]
    },
    "entityId": {
      "description": "UUID",
      "$ref": "../common/uuid.json"
    },
    "entityHrId": {
      "description": "Entity human readable id",
      "type": "string"
    },
    "actionType": {
      "description": "Type of action",
      "type": "string",
      "additionalProperties": false,
      "enum": [
        "CREATE",
        "UPDATE",
        "DELETE",
        "MODIFY",
        "ERROR"
      ]
    },
    "actionStatus": {
      "description": "Type of action",
      "type": "string",
      "enum": [
        "COMPLETED",
        "ERROR"
      ]
    },
    "error": {
      "description": "Error message",
      "type": "string"
    },
    "title": {
      "description": "Journal record title",
      "type": "string"
    },
    "actionDate": {
      "description": "Date and time when action was performed during record processing",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "jobExecutionId"
  ]
}
